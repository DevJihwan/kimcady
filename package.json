{
  "name": "kimcaddie",
  "version": "1.0.0",
  "description": "KimCaddie 예약 데이터 수집기",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "author": "DataLink-Studio",
  "license": "MIT",
  "build": {
    "appId": "com.KimCaddie",
    "productName": "KimCaddie",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "uninstallDisplayName": "KimCaddie",
      "shortcutName": "KimCaddie",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "artifactName": "KimCaddie-Setup-${version}.${ext}"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "dependencies": {
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "puppeteer-core": "^22.6.5"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.2"
  }
}