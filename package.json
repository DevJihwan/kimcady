{
  "name": "pandopgc",
  "version": "1.5.0",
  "description": "PandoPGC 예약 데이터 수집기",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "postuninstall": "node scripts/cleanup.js"
  },
  "author": "DataLink-Studio",
  "license": "MIT",
  "build": {
    "appId": "com.PandoPGC",
    "productName": "PandoPGC",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publisherName": "DataLink-Studio"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "uninstallDisplayName": "PandoPGC",
      "shortcutName": "PandoPGC",
      "artifactName": "PandoPGC-Setup-${version}.${ext}",
      "include": "scripts/installer.nsh",
      "differentialPackage": false,
      "errorDialog": true,
      "warningsAsErrors": false,
      "menuCategory": "PandoPGC"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "index.html",
      ".env",
      "scripts/**/*"
    ],
    "extraResources": [
      {
        "from": "scripts/uninstaller.js",
        "to": "uninstaller.js"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "scripts/cleanup.js"
    ]
  },
  "dependencies": {
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "puppeteer-core": "^22.6.5"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  }
}